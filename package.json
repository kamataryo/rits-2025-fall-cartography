{
  "name": "rits-2025-fall-cartography",
  "version": "1.0.0",
  "description": "立命館大学 2025年度秋学期 ウェブカートグラフィ入門 授業スライド",
  "main": "index.js",
  "scripts": {
    "build": "marp --config marp.config.js -I slides/ -o output/",
    "build:pdf": "marp --config marp.config.js -I slides/ --pdf -o output/pdf/",
    "build:pptx": "marp --config marp.config.js -I slides/ --pptx -o output/pptx/",
    "build:all": "rm -rf output && npm run build && npm run build:pdf && npm run build:pptx",
    "dev": "marp -w -s --config marp.config.js -I slides/ --watch -o output/html/"
  },
  "keywords": [
    "cartography",
    "maplibre",
    "openstreetmap",
    "slides",
    "education"
  ],
  "author": "kamataryo (ryo@kamataworks.com)",
  "license": "MIT",
  "devDependencies": {
    "@marp-team/marp-cli": "^3.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
